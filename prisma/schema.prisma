generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  password     String   
  records      Record[] 
}

model Game {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  records      Record[] 
}

model Record {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])      
  gameId       Int
  game         Game     @relation(fields: [gameId], references: [id])
  timeCount    Int
  createdAt    DateTime @default(now())
}